<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pdm.projeto2.activities.Game" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo" />

    <EditText
        android:id="@+id/editTextX"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="X" />

    <EditText
        android:id="@+id/editTextY"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextX"
        android:layout_alignBottom="@+id/editTextX"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/editTextX"
        android:ems="10"
        android:hint="Y" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextX"
        android:layout_below="@+id/atirar"
        />

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/points"
        android:layout_alignRight="@+id/points"
        android:layout_below="@+id/points"
        android:layout_marginTop="23dp"/>

    <Button
        android:id="@+id/atirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextY"
        android:layout_alignRight="@+id/points"
        android:text="Atirar" />

    <TextView
        android:id="@+id/gameObjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/response"
        android:layout_below="@+id/response"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="TextView"
        android:typeface="monospace" />

</RelativeLayout>